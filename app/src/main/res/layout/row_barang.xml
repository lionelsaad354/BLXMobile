<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_margin="2dp"
    android:orientation="vertical"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_barang"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/img_loading"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/txt_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:maxLines="2"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="Macbook Pro MF839 Early 2015 Fullset"
            android:textColor="@color/color_text_primary"/>

        <TextView
            android:id="@+id/txt_harga"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="16dp"
            android:text="Rp. 17.000.000"
            android:textColor="@color/material_red"/>
        <TextView
            android:id="@+id/txt_seller"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="Rizki Maulana"
            android:textColor="@color/color_text_primary"/>
        <TextView
            android:id="@+id/txt_lokasi"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_location"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="Tanah Bumbu"
            android:textColor="@color/color_text_secondary"/>
    </LinearLayout>


</android.support.v7.widget.CardView>